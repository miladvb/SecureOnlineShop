@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<div class="row">
    <div class="col-4">
        <form asp-action="Login" asp-controller="Account" method="post" class="form row needs-validation">
            @Html.AntiForgeryToken()
            <input type="hidden" id="ReturnUrl" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
            <div class="text-danger" asp-validation-sammary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type="text" asp-for="Email" class="form-control">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="Password" asp-for="Password" class="form-control">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">

                <label asp-for="RememberMe" class="form-check-label">
                    <input type="checkbox" asp-for="RememberMe" class="form-check-input"> @Html.DisplayNameFor(x => x.RememberMe)
                </label>

                <span class="text-danger" asp-validation-for="RememberMe"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}
