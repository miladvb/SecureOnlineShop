@model AddProductViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Add Product";
}

<h1>Add Product</h1>
<form method="post" asp-action="AddProduct" asp-controller="Admin" enctype="multipart/form-data">
    <div class="row">

        <div class="col-4">

            <div class="form-group mb-2">
                <label for="" asp-for="Name" class="control-label"></label>
                <input type="text" asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label for="" asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-group mb-2">
                <label for="" asp-for="Price" class="control-label"></label>
                <input type="text" asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label for="" asp-for="QuantityInStoke" class="control-label"></label>
                <input type="number" asp-for="QuantityInStoke" class="form-control">
                <span asp-validation-for="QuantityInStoke" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label for="" asp-for="Picture" class="control-label"></label>
                <input type="file" class="form-control" asp-for="Picture" placeholder="">
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Add Product" class="btn btn-success" />
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label>Select Categories:</label>
                @foreach (var category in ViewBag.Categories)
                {
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="SelectedCategories" value="@category.Id" /> @category.Name
                        </label>
                    </div>
                }
            </div>
        </div>

    </div>
</form>



@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}